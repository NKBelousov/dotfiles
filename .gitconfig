[user]
	name = NKBelousov
    email = belousovnikita92@gmail.com
[advice]
	statusHints = false
	pushNonFastForward = false
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)[%an]%Creset' --abbrev-commit --date=short
    lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)[%an]%Creset' --abbrev-commit --date=short --all
    whatadded = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)[%an]%Creset' --abbrev-commit --date=short --all --diff-filter=A --
    undo = checkout -p
    unstage = reset HEAD --
    filelog = log -u
    mt = mergetool
    #####
    sl = stash list
    sd = "!f() { git stash drop stash@{$1}; }; f"
    sp = "!f() { git stash pop stash@{$1}; }; f"
    ss = "!f() { git stash save -u $1; }; f"
    sv = "!f() { git stash show -p stash@{$1}; }; f"
    sa = "!f() { git stash apply stash@{$1}; }; f"
    #####
    cp = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue
    #####
    fa = fetch --all --prune
    fu = fetch upstream
    #####
    m = merge
    ma = merge --abort
    mc = merge --continue
    ms = merge --skip
    #####
    rb = rebase
    rbi = rebase --interactive
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
[core]
    editor = vim
	whitespace = trailing-space,space-before-tab
[color]
	ui = auto
[color "branch"]
    current = green
    local = yellow
    remote = red
[color "status"]
    added = green
    changed = red
    untracked = yellow
[diff]
	renames = copies
	mnemonicprefix = true
[merge]
	tool = vimdiff[push]
	default = tracking
[rerere]
    enabled = 1
    autoupdate = 1
[branch]
	autosetuprebase = always
[push]
	default = current
