{
  "cl": {
    "prefix": "cl",
    "body": "${1:name} {\n  ${2:declarations}\n}",
    "description": "Class declaration"
  },
  "rel": {
    "prefix": "rel",
    "body": "position: relative;",
    "description": "position: relative;"
  },
  "abs": {
    "prefix": "abs",
    "body": "position: absolute;",
    "description": "position: absolute;"
  },
  "fix": {
    "prefix": "fix",
    "body": "position: fixed;",
    "description": "position: fixed;"
  },
  "sta": {
    "prefix": "sta",
    "body": "position: static;",
    "description": "position: static;"
  },
  "med": {
    "prefix": "med",
    "body": "@media(${1:key}: ${2:value}){\n  ${3:declarations}\n}",
    "description": "Media query"
  },
  "pad": {
    "prefix": "pad",
    "body": "padding: ${1:value};",
    "description": "Padding"
  },
  "mar": {
    "prefix": "mar",
    "body": "margin: ${1:value};",
    "description": "Margin"
  },
  "bl": {
    "prefix": "bl",
    "body": "display: block;",
    "description": "display: block;"
  },
  "ibl": {
    "prefix": "ibl",
    "body": "display: inline-block;",
    "description": "display: inline-block;"
  },
  "inl": {
    "prefix": "inl",
    "body": "display: inline;",
    "description": "display: inline;"
  },
  "fl": {
    "prefix": "fl",
    "body": "display: flex;",
    "description": "display: flex;"
  },
  "ifl": {
    "prefix": "ifl",
    "body": "display: inline-flex;",
    "description": "display: inline-flex;"
  },
  "bef": {
    "prefix": "bef",
    "body": "${1:selector}:before {\n  content: '';\n  ${2:declarations}\n}",
    "description": ":before pseudo-element"
  },
  "aft": {
    "prefix": "aft",
    "body": "${1:selector}:after {\n  content: '';\n  ${2:declarations}\n}",
    "description": ":after pseudo-element"
  },
  "square": {
    "prefix": "square",
    "body": "${1:size}: ${2:value};\nheight: $1;\nmax-height: $1;\nmax-width: $1;\nmin-height: $1;\nmin-width: $1;\nwidth: $1;",
    "description": "Square object"
  },
  "rect": {
    "prefix": "rect",
    "body": "${1:width}: ${2:value};\n${3:height}: ${4:value};\nheight: $3;\nmax-height: $3;\nmax-width: $1;\nmin-height: $3;\nmin-width: $1;\nwidth: $1;",
    "description": "Rectangle object"
  },
  "clearfix": {
    "prefix": "clearfix",
    "body": "${1:selector} {\n  overflow: auto;\n}\n\n$1::after {\n  clear: both;\n  content: \"\";\n  display: table;\n}",
    "description": "clearfix"
  }
}